<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="1080.0" prefWidth="1920.0" spacing="20.0" styleClass="background" stylesheets="@style/rooms.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.am13.client.view.gui.ViewGUIControllerRooms">
    <padding>
        <Insets bottom="40.0" left="20.0" right="20.0" top="40.0" />
    </padding>
    <StackPane maxHeight="750.0" minHeight="775.0">
        <StackPane maxHeight="640.0" maxWidth="550.0" minHeight="600.0" minWidth="550.0" styleClass="container"
                   StackPane.alignment="BOTTOM_CENTER">
            <StackPane prefWidth="653.0" styleClass="container-border"/>
            <VBox alignment="BOTTOM_CENTER" maxHeight="440.0" minHeight="480.0" StackPane.alignment="BOTTOM_CENTER">
                <HBox alignment="CENTER">
                    <TableView fx:id="roomsTable">
                        <columns>
                            <TableColumn fx:id="roomId" editable="false" prefWidth="49.99999976158142"
                                         reorderable="false" resizable="false" sortable="false" text="ID"/>
                            <TableColumn fx:id="roomStatus" editable="false" prefWidth="65.33332061767578"
                                         reorderable="false" resizable="false" sortable="false" text="Status"/>
                            <TableColumn fx:id="roomP1" editable="false" prefWidth="90.0" reorderable="false"
                                         resizable="false" sortable="false" text="Player 1"/>
                            <TableColumn fx:id="roomP2" editable="false" prefWidth="90.0" reorderable="false"
                                         resizable="false" sortable="false" text="Player 2"/>
                            <TableColumn fx:id="roomP3" editable="false" prefWidth="90.0" reorderable="false"
                                         resizable="false" sortable="false" text="Player 3"/>
                            <TableColumn fx:id="roomP4" editable="false" prefWidth="90.0" reorderable="false"
                                         resizable="false" sortable="false" text="Player 4"/>
                            <TableColumn fx:id="roomNP" editable="false" prefWidth="45.0" reorderable="false"
                                         resizable="false" sortable="false" text="#NP"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                </HBox>
                <StackPane maxHeight="-Infinity" minHeight="-Infinity" prefHeight="220.0" styleClass="controls"
                           VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="5.0"/>
                    </padding>
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                    <VBox alignment="TOP_CENTER" prefWidth="100.0" StackPane.alignment="CENTER">
                        <Button alignment="CENTER" mnemonicParsing="false"
                                onAction="#onRefreshRoomButtonClick" text="Refresh Rooms"
                                wrapText="true">
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                        </Button>
                        <HBox alignment="CENTER">
                            <VBox.margin>
                                <Insets top="25.0"/>
                            </VBox.margin>
                            <padding>
                                <Insets bottom="10.0"/>
                            </padding>
                            <TextField fx:id="nicknameField" prefHeight="25.0" prefWidth="220.0"
                                       promptText="Nickname" styleClass="textbox">
                                <HBox.margin>
                                    <Insets right="40.0"/>
                                </HBox.margin>
                            </TextField>
                            <Label graphicTextGap="0.0" text="Token Color" wrapText="true">
                                <HBox.margin>
                                    <Insets right="5.0"/>
                                </HBox.margin>
                            </Label>
                            <ChoiceBox fx:id="colorBox" prefHeight="25.0" prefWidth="120.0"
                                       styleClass="textbox"/>
                        </HBox>
                        <HBox alignment="CENTER">
                            <VBox.margin>
                                <Insets top="4.0"/>
                            </VBox.margin>
                            <padding>
                                <Insets bottom="20.0"/>
                            </padding>
                            <Button mnemonicParsing="false" onAction="#onJoinRoomButtonClick"
                                    text="Join Room">
                                <cursor>
                                    <Cursor fx:constant="HAND"/>
                                </cursor>
                                <HBox.margin>
                                    <Insets right="10.0"/>
                                </HBox.margin>
                            </Button>
                            <Button mnemonicParsing="false" onAction="#onReconnectMatchButtonClick"
                                    text="Reconnect Match" wrapText="true">
                                <cursor>
                                    <Cursor fx:constant="HAND"/>
                                </cursor>
                                <HBox.margin>
                                    <Insets left="10.0"/>
                                </HBox.margin>
                            </Button>
                        </HBox>
                        <HBox alignment="CENTER" spacing="10.0">
                            <Label text="Target number of players" wrapText="true"/>
                            <Spinner fx:id="nPlayersSpinner" prefHeight="35.0" prefWidth="67.0"
                                     styleClass="textbox">
                                <HBox.margin>
                                    <Insets right="70.0"/>
                                </HBox.margin>
                            </Spinner>
                            <Button mnemonicParsing="false" onAction="#onCreateRoomButtonClick"
                                    text="Create Room" wrapText="true">
                                <cursor>
                                    <Cursor fx:constant="HAND"/>
                                </cursor>
                            </Button>
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                        </HBox>
                    </VBox>
                </StackPane>
            </VBox>
            <ImageView disable="true" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true"
                       StackPane.alignment="TOP_LEFT">
                <Image url="@style/img/border-field-corner-top-left.png"/>
            </ImageView>
            <ImageView disable="true" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true"
                       StackPane.alignment="BOTTOM_RIGHT">
                <Image url="@style/img/border-field-corner-bottom-right.png"/>
            </ImageView>
            <ImageView disable="true" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true"
                       StackPane.alignment="BOTTOM_LEFT">
                <Image url="@style/img/border-field-corner-bottom-left.png"/>
            </ImageView>
            <ImageView disable="true" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true"
                       StackPane.alignment="TOP_RIGHT">
                <Image url="@style/img/border-field-corner-top-right.png"/>
            </ImageView>
        </StackPane>
        <ImageView fitHeight="290.0" fitWidth="290.0" pickOnBounds="true" preserveRatio="true"
                   StackPane.alignment="TOP_CENTER">
            <Image url="@style/img/codex-logo.png"/>
        </ImageView>
    </StackPane>

</VBox>
